<%= render(DashboardMenuComponent.new) do %>
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with(url: recommendations_path, html: { class: 'space-y-6' }, builder: TailwindFormBuilder) do |f| %>
        <%= f.label :coverage_requirements %>
        <div class="mt-3 flex flex-col space-y-4">
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][inpatient]' %>
            <%= f.label 'recommendation[coverage_requirements][inpatient]', "Inpatient" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][outpatient]' %>
            <%= f.label 'recommendation[coverage_requirements][outpatient]', "Outpatient" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][therapists]' %>
            <%= f.label 'recommendation[coverage_requirements][therapists]', "Therapists" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][medicines_and_appliances]' %>
            <%= f.label 'recommendation[coverage_requirements][medicines_and_appliances]', "Medicines and Appliances" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][wellness]' %>
            <%= f.label 'recommendation[coverage_requirements][wellness]', "Wellness" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][maternity]' %>
            <%= f.label 'recommendation[coverage_requirements][maternity]', "Maternity" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][dental]' %>
            <%= f.label 'recommendation[coverage_requirements][dental]', "Dental" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][optical]' %>
            <%= f.label 'recommendation[coverage_requirements][optical]', "Optical" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][evacuation]' %>
            <%= f.label 'recommendation[coverage_requirements][evacuation]', "Evacuation" %>
          </div>
          <div class="flex flex-wrap space-x-2">
            <%= f.check_box 'recommendation[coverage_requirements][repatriation]' %>
            <%= f.label 'recommendation[coverage_requirements][repatriation]', "Repatriation" %>
          </div>
        </div>
        <div class="mt-3 flex justify-center">
          <%= f.submit "Submit" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
